<h2>Edit users</h2<br />
	
<% form_for(@user) do |f| %>
	<%= f.error_messages %>
	<%= render :partial => 'fields', :locals => { :f => f } %>

	<div class="actions">
		<%= f.submit "Update" %>
	</div>
<% end %>

<div>
	<%= gravatar_for @user %>
	<a href="http://gravatar.com/emails" TARGET="_blank" >change</a>
</div>
		